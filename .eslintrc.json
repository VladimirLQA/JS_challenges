{
  "extends": [
    "prettier",
    "metarhia"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "strict": "off",
    "no-inner-declarations": "off",
    "max-len": [
      "error",
      {
        "ignoreComments": true,
        "ignorePattern": "^(const|let|var)\\s+\\w+\\s*=\\s*\\{.*\\};?$",
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "camelcase": "off",
    "consistent-return": ["error", { "treatUndefinedAsUnspecified": true }],
    "no-unused-vars": ["error", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }]
  }
}
